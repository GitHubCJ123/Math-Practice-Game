{
  "functions": {
    "api/archive-scores.ts": {
      "memory": 1024
    },
    "api/scores.ts": {
      "memory": 1024
    },
    "api/games.ts": {
      "memory": 1024
    },
    "api/matchmaking.ts": {
      "memory": 1024
    },
    "api/rematch.ts": {
      "memory": 1024
    },
    "api/cleanup.ts": {
      "memory": 1024
    },
    "api/pusher/auth.ts": {
      "memory": 1024
    }
  },
  "rewrites": [
    { "source": "/api/:match*", "destination": "/api/:match*" },
    { "source": "/((?!api/|assets/).*)", "destination": "/index.html" }
  ],
  "crons": [
    {
      "path": "/api/archive-scores",
      "schedule": "0 5 1 * *"
    },
    {
      "path": "/api/cleanup?action=cleanup-abandoned",
      "schedule": "0 3 * * *"
    }
  ]
}
