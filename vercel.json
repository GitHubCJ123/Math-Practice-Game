{
  "functions": {
    "api/archive-scores.ts": {
      "memory": 1024,
      "maxDuration": 60,
      "includeFiles": "{lib/api/**,types.ts}"
    },
    "api/**/*.ts": {
      "memory": 1024,
      "includeFiles": "{lib/api/**,types.ts}"
    }
  },
  "rewrites": [
    { "source": "/api/:match*", "destination": "/api/:match*" },
    { "source": "/((?!api/|assets/).*)", "destination": "/index.html" }
  ],
  "crons": [
    {
      "path": "/api/archive-scores",
      "schedule": "0 5 1 * *"
    }
  ]
}
